echo "Removing containersâ€¦"
docker rm $(docker ps -a -q) -v -f 2> /dev/null
echo "Removing imagesâ€¦"
docker rmi $(docker images -q) -f 2> /dev/null
echo "Killing Dockerâ€¦"
killall Docker
open /Applications/Docker.app

sleep 1
echo "Waiting for docker to restartâ€¦"
until docker ps > /dev/null 2> /dev/null
do
sleep 1
done

echo "Done."
osascript -e "display notification with title \"ğŸ³\""
